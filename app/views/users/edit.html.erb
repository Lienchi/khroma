  <li><%= @user.name %></li>
  <li><%= @user.email %></li>
  <li><%= @user.avatar %></li>

  <%= form_for @user do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <%= f.label :email, "email" %>
    <%= f.text_field :email %>
    
    <%= f.file_field :avatar %>
    <%= f.submit %>
  <% end %>

  <%= link_to "編輯密碼", edit_user_registration_path(@user) %> 