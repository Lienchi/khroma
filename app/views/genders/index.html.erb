<h1>Link</h1>
<% @genders.each do |gender| %>
  <li><%= link_to gender.name, gender_categories_path(gender.id) %></li>
<% end %>

<h1>推薦商品</h1>
<% @genders.each do |gender| %>
  <% gender.categories.limit(2).each do |category| %>
    <%= category.name %>
    <% category.types.limit(3).each do |type| %>
      <% type.styles.limit(2).each do |style| %>
        <li><%= link_to style.products.first.name, product_path(style.products.first) %></li>
      <% end %>
    <% end %>
  <% end %>
<% end %>