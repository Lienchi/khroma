<!DOCTYPE html>
<html>
  <head>
    <title>Khroma</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header id="header">
      <nav id="nav" class="shadow-box">
        <div class="container">
          <div id="upper-nav">
            <div id="logo">
              <%= image_tag("hue-ring-500x-thing.png", class: "logo-img") %>
              <%= link_to 'Khroma', root_path %>
            </div>
            <ul id="menu">
              <li class="gender-btn" value="1">Men</li>
              <li class="gender-btn" value="2">Women</li>
            </ul>
            <ul id="menu-user">
              <% if current_user %>
                <% if current_user.is_admin? %> 
                  <li><%= link_to '管理者後台', admin_root_path %></li>
                <% end %>
                <li>會員中心</li>
                <li><%= link_to '登出', destroy_user_session_path, method: :delete %></li>
                
              <% else %>
                <li><%= link_to '會員登入', user_session_path, method: :post %></li>

              <% end %>
            </ul>
          </div> 
        </div>
      </nav>
      <div id="lower-nav" class="shadow-box">
        <div class="container">
        </div>
      </div>
    </header>
    <div id="top" class="alert-row">
      <% if flash[:notice] %>
        <div class="notice alert alert-success" role="alert">
          <div class="container">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button>
            <div class="text-center">
              <%= flash[:notice] %>
            </div>
          </div>
        </div>
      <% elsif flash[:alert]%> 
        <div class="alert alert-danger" role="alert">
          <div class="container">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button>
            <div class="text-center">
              <%= flash[:alert] %>
            </div>
          </div>
        </div>               
      <% end %>
    </div>
    <%= yield %>
    <footer>
      <p>Copyright © 2018 LET IT CODE.</p>
    </footer>
    <div id="go-top-btn" class="shadow-box">
      <%= link_to "#header", data: { turbolinks: false }  do %>
        <div style="height: 20px"><i class="fa fa-angle-up"></i></div>
        <p>TOP</p>
      <% end %>
    </div>
  </body>
</html>
