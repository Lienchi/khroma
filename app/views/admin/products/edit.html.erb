<div class = "container">

  <%= render partial: "shared/admin_nav" %>
  <h2>編輯項目</h2>
    <table class="table table-hover table-dark">
      <thead>
        <tr>
          <% @product.attributes.each do |key,value|  %>
            <th scope="col"><%= key %></th>
          <% end %>
 
        </tr>
      </thead>
      <tbody>
       
          <tr>
            <% @product.attributes.each do |key,value|  %>
              <td class = "td-width"><%= value %></td>
            <% end %>

          </tr>
     
      </tbody>
    </table>

  <h2>編輯區</h2>
  <%= form_for [:admin,@style,@product] do |f| %>
    <div class = "row">
      <div class = "col-3">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name %>
      </div>
      <div class = "col-3">
        <%= f.label :brand, "Brand" %>
        <%= f.text_field :brand %>
      </div>

      <div class = "col-3">
        <%= f.label :price, "Price" %>
        <%= f.text_field :price %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, "Image" %>
      <%= f.text_field :image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :link, "Link" %>
      <%= f.text_field :link, class: "form-control" %>
    </div>
    <br>
    <%= f.submit %>
  <% end %>

</div>