<div class="container">
  <div id="user-panel">
    <div class="user-pill-panel shadow-box-light">
      <div class="user-pill" style="border-bottom: 3px solid var(--red);">
        <%= link_to user_carts_path(current_user) do %>
          <p>我的收藏配色車</p>
        <% end %>
      </div>
        <div class="user-pill">
          <%= link_to user_path(current_user) do %>
            <p>個人檔案</p>
          <% end %>
        </div>
      </div>
    </div>
    <% @types.each do |type| %>
      <div class="cart-type-title shadow-box-light">
        <%= type %>
      </div>
      <div class="styles-panel">
        <% @products.each do |product| %>
          <% if product.style.type.name == type %>    
            <%= render partial: "shared/product_basic", locals: { product: product} %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>



